# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 2 space indentation
[*.{yml,md}]
indent_style = space
indent_size = 2

# 4 tab indentation
[*.{pl,sh,html}]
indent_style = tab
indent_size = 4

# Tab indentation
[Makefile]
indent_style = tab
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{package.json,.gitignore}]
indent_style = space
indent_size = 2
